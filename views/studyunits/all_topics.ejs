<% layout("layouts/boilerplate") %>
<% block('title',"All Topics: ")%>

<div class="container my-5">
  <h3 class="mb-4 text-center">Topics in <span  class="text-primary"><%= studyunit.sub_name %></span></h3>
  <div class="row g-4">
    <% for(let topic of studyunit.topics){ %>
      <div class="col-md-6 col-lg-4">
        <div class="card topic-card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h4 class="card-title mb-3">
              <a href="/studyunits/<%= studyunit._id %>/topics/<%= topic._id %>" class="text-decoration-none text-dark fw-bold">
                <%= topic.title %>
              </a>
            </h4>
            <!-- You can add a short description or notes preview here if available -->
            <div class="mt-auto">
              <a href="/studyunits/<%= studyunit._id %>/topics/<%= topic._id %>" class="btn btn-outline-primary btn-sm">View Topic</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <form method="get" action="/studyunits/<%= studyunit._id %>/new_topic">
      <button class="btn btn-success">Add New Topic</button>
    </form>
  </div>
</div>



